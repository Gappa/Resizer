{
	"name": "nelson/resizer",
	"description": "Resizer Extension for Nette Framework & Latte",
	"require": {
		"php": ">= 8.0",
		"ext-fileinfo": "*",
		"latte/latte": "^2.10",
		"nette/application": "^3.1",
		"nette/di": "^3.0",
		"nette/http": "^3.1",
		"nette/schema": "^1.0",
		"nette/utils": "^3.2",
		"imagine/imagine": "^1.2.3"
	},
	"require-dev": {
		"nette/tester": "^2.0",
		"phpstan/extension-installer": "^1.0",
		"phpstan/phpstan": "^1.0.0",
		"phpstan/phpstan-nette": "^1.0.0",
		"roave/security-advisories": "dev-master",
		"tracy/tracy": "^2.8"
	},
	"autoload": {
		"psr-4": {
			"Nelson\\Resizer\\": "src/"
		}
	},
	"scripts": {
		"phpstan": "./phpstan/phpstan",
		"tests": "./tests/tests"
	},
	"config": {
		"allow-plugins": {
			"phpstan/extension-installer": true
		}
	}
}
