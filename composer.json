	"require": {
		"php": ">= 7.4",
		"ext-fileinfo": "*",
		"latte/latte": "^2.10",
		"nette/application": "^3.1",
		"nette/di": "^3.0",
		"nette/http": "^3.1",
		"nette/schema": "^1.0",
		"nette/utils": "^3.2",
		"imagine/imagine": "^1.2.3"
	},
	"require-dev": {
		"nette/tester": "^2.0",
		"phpstan/extension-installer": "^1.0",
		"phpstan/phpstan": "^0.12.0",
		"phpstan/phpstan-nette": "^0.12.0",
		"roave/security-advisories": "dev-master"
	},
	"autoload": {
		"psr-4": {
			"Nelson\\Resizer\\": "src/"
		}
	},
	"scripts": {
		"phpstan": "./phpstan/phpstan",
		"tests": "./tests/tests"
	}
}
